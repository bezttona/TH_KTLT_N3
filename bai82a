#include <stdio.h>
#include <conio.h>

void matran(int n,int m) {
    int A[n][m];
    int v=1;
    int t= 0, b= n-1 , l= 0, r= m-1 ;
    

    while (t<= b&& l<= r) {
        
        for (int i = l; i <= r; i++) {
            A[t][i] = v++;
        }
        t+=1;

        
        for (int i = t ; i <= b; i++) {
            A[i][r] = v++;
        }
        r-=1;

        
         {
            for (int i = r; i >= l; i--) {
                A[b][i] = v++;
            }
            b-=1;
        }

        
         {
            for (int i = b; i >= t; i--) {
                A[i][l] = v++;
            }
            l+=1;
        }
    }

  
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            printf("%d ", A[i][j]);
        }
        printf("\n");
    }
}

int main() {
    int n,m;
    printf("Nhap kich thuoc ma tran nxm: ");
    scanf("%d", &n);
	scanf("%d", &m);

    printf("Ma tran xoan tu ngoai vao trong:\n");
    matran(n,m);
    getch();
}
